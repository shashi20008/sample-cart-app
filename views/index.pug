extends layout

block content
  div.container
    p Add some of the following items to your cart to complete your purchase.
    p You currently have #{cart.length} items in your cart.
    
    for item in allItems
      div.row.item-row
        div.col-3
          img(src="data:image/png;base64," style="width: 100px; height: 100px")
        div.col-4
          span #{item.name}
        div.col-3
          span #{item.price} #{item.currencyCode}
        div.col-2
          form(action="/add-to-cart" method="POST")
            input(type="hidden" value=item._id name="itemId")
            button.btn.btn-primary(type="submit") Add to cart

